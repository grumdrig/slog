checksp()

// Logical operators

assert (6 && 3) == 3
assert !(0 && 3)
assert !(6 ^^ 3)
assert !(0 ^^ 0)
assert (0 ^^ 3) == 3
assert (2 ^^ 0) == 2
assert (6 || 3) == 6
assert (0 || 3) == 3
assert !(0 || 0)

checksp()

assert (v6 && v3) == v3
assert !(v0 && v3)
assert !(v6 ^^ v3)
assert !(v0 ^^ v0)
assert (v0 ^^ v3) == v3
assert (v2 ^^ v0) == v2
assert (v6 || v3) == v6
assert (v0 || v3) == v3
assert !(v0 || v0)

checksp()

// Shortcutting

x = 0
func incX(r) {
	x += 1
	return r
}
incX(0)
assert x == 1
assert incX(1) || incX(1)
assert x == 2
assert incX(1) && incX(1)
assert x == 4
assert !(incX(0) && incX(1))
assert x == 5

checksp()

