////////////////////
// Functions
///////////////////

func factorial(n) (n <= 1 && 1) || n * factorial(n - 1)
assert factorial(3) == 6

macro plusFive(v) v + 5
assert plusFive(1) == 6
assert plusFive(v1) == v6

checksp()

func either(which) {
  if which {
    return 1
  } else {
    return 2
  }
}

assert either(100) == 1
assert either(0) == 2

func unless(cond, what) {
  if cond {
    return 99
  }
  return what
}

assert unless(1,10) == 99
assert unless(0,20) == 20

checksp()

var glow = 4
macro topMan(n) {
  var glow = 9
  glow += n
}
topMan(2)
assert glow == 4


