///////////////
// Variables
///////////////

var var1
var var2
var2 = var1 + 2
assert var2 == 2
var var3 = [10, 20, 30]
assert var3[1] == 20

func f1(var4) {
  var var5
  var5 = var2 + 100
  var1 = var4 + var5 + 1000
  return var3
}

assert f1(50) == 10  // yeah that's perverse
assert var1 == 50 + 2 + 100 + 1000

checksp()

// Scoping in blocks

var what = 1
var was = 4
while what {
  var what = 2
  what = 3
  was = 5
  break
}
assert what == 1
assert was == 5

if what {
  var what
  what = 0
  was = 6
}
assert what == 1
assert was == 6

checksp()

func fresh(what) {
  var was = 7
  what = 8
  was = 9
  return what
}
assert what == 1
assert was == 6
what = fresh(what)
assert what == 8


