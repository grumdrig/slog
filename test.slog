assert (x %= 3) == 1
assert (x <<= 3) == 8
assert (x >>= 1) == 4
assert (x |= 2) == 6
assert (x &= 3) == 2
assert (x ^= 7) == 5

assert (x = v3) == v3
assert (x += v4) == v7
assert (x -= v4) == v3
assert (x *= v4) == v12
