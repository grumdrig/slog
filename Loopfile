# Grumdrig game

# compile
node compiler.js -i ./bompton.js -o @grumdrig.asm grumdrig.slog

# assemble
node vm.js -a grumdrig.asm -d @grumdrig.dasm -o @grumdrig.bin -- grumdrig.asm

# execute
node bompton.js -v grumdrig.bin -- grumdrig.bin


# tests

# compile
node compiler.js -o @test.asm test.slog

# assemble
node --trace-uncaught vm.js -a test.asm -d @test.dasm -o @test.bin -- test.asm

# execute
# node vm.js -l test.bin -r -- test.bin
node test.js -- test.bin



# Manuals

node_modules/marked/bin/marked.js -i vm.md -o @vm.html
node_modules/marked/bin/marked.js -i assembler_manual.md -o @asm.html
node_modules/marked/bin/marked.js -i compiler.md -o @compiler.html
